container_commands:
  00_copy_env_file:
    command: "cp .env.example .env"
    cwd: "/var/app/ondeck"

  01_run_key_generate:
    command: "php artisan key:generate"
    cwd: "/var/app/ondeck"

  02-install_dependencies:
    command: "php /usr/bin/composer.phar install"
    cwd: "/var/app/ondeck"

  03_run_storage_link:
    command: "sudo ln -s storage/app/public public/storage"
    cwd: "/var/app/current"
